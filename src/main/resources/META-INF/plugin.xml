<idea-plugin>
    <id>io.github.poa1024.chatgpt_mate</id>
    <name>Chat GPT Mate</name>
    <vendor email="poa1024@gmail.com"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="io.github.poa1024.chatgpt.mate.intellij.ui.GptSessionWindowFactory" id="GPT" anchor="bottom"/>
        <notificationGroup id="GptNotificationGroup" displayType="BALLOON"/>
    </extensions>

    <actions>

        <group id="poa1024.chatGpt"
               text="Chat GPT"
               popup="true"
               description="Ask Chat GPT">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action
                    id="poa1024.chatGpt.explain"
                    class="io.github.poa1024.chatgpt.mate.intellij.action.explain.ExplainCodeAction"
                    text="Explain the Code"
                    description="Explain the code">
            </action>
        </group>


        <action
                id="poa1024.chatGpt.generateCode"
                class="io.github.poa1024.chatgpt.mate.intellij.action.generate.GenerateCodeAction"
                text="GPT. Create Code Based on the Description"
                description="GPT. Create code based on the description">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>

    </actions>
</idea-plugin>