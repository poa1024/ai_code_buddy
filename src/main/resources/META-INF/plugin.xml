<idea-plugin>
    <id>io.github.poa1024.chatgpt_intellij_plugin</id>
    <name>Chat GPT</name>
    <vendor email="poa1024@gmail.com"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij"/>

    <actions>

        <group id="poa1024.chatGpt"
               text="Chat GPT"
               popup="true"
               description="Ask Chat GPT">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action
                    id="poa1024.chatGpt.explain"
                    class="io.github.poa1024.action.explain.ExplainTheGistAction"
                    text="Explain the Gist"
                    description="Explain the gist">
            </action>
            <action
                    id="poa1024.chatGpt.explainInDetails"
                    class="io.github.poa1024.action.explain.ExplainInDetailsAction"
                    text="Explain in Details"
                    description="Explain in details">
            </action>
        </group>


        <action
                id="poa1024.chatGpt.generateCode"
                class="io.github.poa1024.action.generate.GenerateCodeAction"
                text="GPT. Create Code Based on the Description"
                description="GPT. Create code based on the description">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>

    </actions>
</idea-plugin>